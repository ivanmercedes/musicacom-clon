<div class="col-12">
    <div class="card">
        <div class="card-header"> 
               <a href="{{'admin/generos/add' | url }}" class="btn btn-info">Agregar un nuevo genero</a>         
                
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Nombre</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>

                  {% for item in genres %}
                     <tr>
                       <td>{{item.id}}</td>
                       <td>{{item.name}}</td>
                       <td>
                         <a href="{{'admin/generos/' | url ~ 'edit/' ~ item.id }}"  class="btn btn-primary"><i class="fas fa-edit"></i></a>
                         <a onclick="return confirm('Seguro que deas Eliminarlo')" href="{{'admin/generos/' | url ~ 'delete/' ~ item.id }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                       </td>
                    </tr>
                  {% endfor %}
                
                  </tbody>
                </table>
                 
              </div>
             
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
</div>