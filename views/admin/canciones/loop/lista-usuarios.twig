<div class="col-12">
    <div class="card">
        <div class="card-header"> 
               <a href="{{'admin/usuarios/agregar' | url }}" class="btn btn-info">Agregar nuevo usuario</a>         
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Buscar">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Nombre</th>
                      <th>Email</th>
                      <th>Estado</th>
                      <th>Tipo</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>

                  {% for item in users %}
                     <tr>
                       <td>{{item.id}}</td>
                       <td>{{item.name}}</td>
                       <td>{{item.email}}</td>

                       <td>{% if item.status == 1 %}
                            <span class="badge bg-success">Activo</span>
                       {% else %}
                            <span class="badge bg-warning">Pendiente</span>
                       {% endif %}
                        </td>
                       <td>{% if item.role == 1 %}
                            Admin</span>
                       {% else %}
                            Usuario
                       {% endif %}</td>
                       <td>
                         {# <a href="{{ 'letra/' | url  ~ item.slug}}" class="btn btn-default" target="_blank"><i class="fas fa-eye"></i></a> #}
                         <a href="{{'admin/usuarios/' | url ~ item.id ~'/edit'}}"  class="btn btn-primary"><i class="fas fa-edit"></i></a>
                         <a href="{{'admin/usuarios/' | url ~ item.id ~'/delete'}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                         
                       </td>
                    </tr>
                  {% endfor %}
                  


                  </tbody>
                </table>
                 {{ paginate |raw }}  
              </div>
             
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
</div>