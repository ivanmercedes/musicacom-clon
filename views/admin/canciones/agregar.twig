{% extends "admin/partials/layout.twig" %}

{% block content %}
  
  {% include "admin/partials/navbar.twig" %}
  {% include "admin/partials/aside.twig" with {'active': 'canciones','vista': 'agregar'} %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    {% include "admin/partials/title.twig" with {'title': 'Agregar Cancion'} %}
       
         
    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        {{ '' | msg.display()}}
        <div class="row">
            <div class="col-md-12">
            
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title"></h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="titulo">Titulo </label>
                                <input type="text" class="form-control" id="titulo" placeholder="Titulo de la cancion" required name="titulo">
                            </div>
                            
                            <div class="form-group">
                            <label>Artista</label>
                            <select id="select2" class="form-control" required name="artista"></select>
                            </div>
                            <!-- /.form-group -->

                            <div class="form-group">
                                <label for="Estado">Album</label>
                                <select  class="form-control" id="estado" name="album"></select>
                                <small>Si la cancion o el artista no tienen albums puede omitir esta seleccion</small>
                            </div>

                            <div class="form-group">
                              <label>Colaboraciones - Artistas</label>
                              <select id="featuring" class="form-control" multiple name="feat[]">
                              </select>
                            </div>
                            <!-- /.form-group -->

                            <div class="form-group">
                              <label for="actionsong_id">Estado</label>
                              <select class="form-control" id="estado" name="estado">
                                <option value="1">Aprobado</option>
                                <option value="0">Pendiente</option>
                              </select>
                            </div>
                            <!-- /.form-group -->

                            <div class="form-group" >
                                <input type="file" name="file"  id="upload"/>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="video">Id video Youtube o URL</label>
                                <input class="form-control" placeholder="Ejemplo: QtXby3twMmI" name="video" type="text" id="video">
                            </div>


                            <div class="form-group">
                                <label for="">Descripcion de la cancion</label>
                                <textarea class="form-control" placeholder="Escribe una breve descripcion" rows="4" name="description" cols="50" tabindex="-1"></textarea>
                            </div>


                            <div class="form-group">
                                <label for="">Letra de la canci√≥n</label>
                                <textarea class="form-control" placeholder="Escribe una breve descripcion" rows="9" name="letra" cols="50" tabindex="-1"></textarea>
                            </div>

                        </div>
                    
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Agregar Cancion</button>
                </div>
              </form>

              
            </div>
          </div>
                
        </div>
        <!-- /.row -->
        
      </div><!-- /.container-fluid -->
      
    </div>
    <!-- /.content -->  
    
  </div>
  <!-- Content Wrapper. Contains page content -->

{% endblock %}


